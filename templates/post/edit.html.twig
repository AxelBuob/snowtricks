{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent()}}
{% endblock %}

{% form_theme form 'form/collection.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

<div class="container">
    <h1>{{ title }}</h1>
    <div>
        {{ form_start(form) }}
            
            <div class="text-end">
                {% if app.request.attributes.get('_route') == 'post_edit' %}
                    <a data-bs-toggle="modal" data-bs-target="#modal-post" class="btn btn-outline-danger" href="{{ path('post_delete', {id: post.id}) }}">Supprimer</a>
                    {{ include('post/_confirm_delete_post.html.twig')}}
                {% endif %}
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.category) }}

            {# Images #}

            <div class="d-flex flex-wrap gap-2 py-3">
            {% for image in post.images %}
                <a  href="{{ asset('uploads/post/' ~ image.name) }}">
                    <div class="card">
                        <img class="" src="{{ asset('uploads/post/' ~ image.name) }}" alt="" width="200px" height="150px" style="object-fit: cover;">
                        <div class="card-footer">
                            <a class="link-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                        </div>
                    </div>
                </a>
                {{ include('post/_confirm_delete_post.html.twig')}}
            {% endfor %}
            </div>

            {{ form_row(form.images) }}
            {# <div
                class="mt-3"
                id="image-fields-list"
                data-image-prototype="{{ form_widget(form.images.vars.prototype)|e }}"
                data-image-tags="{{ '<div></div>'|e }}"
                data-image-counter="{{ form.images|length }}"
            >
                <h2>Images</h2>
                {% for image in form.images %}
                    {{ form_row(image) }}
                {% endfor %}
            </div>
            <button id="add-image"
                    type="button"
                    class="btn btn-outline-success add-another-image-widget"
                    data-image-selector="#image-fields-list">Ajouter des images</button>  
       #}
            {# Videos #}
            <div
                class="mt-3"
                id="video-fields-list"
                data-video-prototype="{{ form_widget(form.videos.vars.prototype)|e }}"
                data-video-tags="{{ '<div></div>'|e }}"
                data-video-counter="{{ form.videos|length }}"
            >
                <h2>Vidéos</h2>
                {% for video in form.videos %}
                    {{ form_row(video) }}
                {% endfor %}
            </div>
            <button id="add-video" 
                    type="button"
                    class="btn btn-outline-success add-another-video-widget"
                    data-video-selector="#video-fields-list">Ajouter des vidéos</button>  
        
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# {{ encore_entry_script_tags('add_videos') }}
    {{ encore_entry_script_tags('add_images') }} #}
{% endblock %}