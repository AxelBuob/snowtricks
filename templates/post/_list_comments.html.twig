{% for comment in comments.results %}
    <div class="card">
        <div class="card-header">
            Publié le {{ comment.createdAt | format_datetime('full', 'none', locale='fr') }} à {{ comment.createdAt | format_datetime('none', 'short', locale='fr') }} | 
            <a class="link-danger" href="{{ path('post_comment_delete', {'id': comment.id })}}">Supprimer</a>
        </div>
        <div class="card-body d-flex justify-content-start">
            {% if comment.user.avatar is defined and comment.user.avatar is not null %}
                <img src="{{ asset('uploads/user/' ~ comment.user.avatar.name) }}" alt="" width="60" height="auto">
            {% else %}
                <img src="{{ asset('build/images/user.png') }}" class="rounded-circle" width="60" height="auto">
            {% endif %}
            <blockquote class="blockquote mb-0 w-100">
                <p>{{ comment.content }}</p>
                <footer class="blockquote-footer"><cite title="Source Title">par {{ comment.user.fullName }}</cite></footer>
            </blockquote>
        </div>
    </div>
{% endfor %}
