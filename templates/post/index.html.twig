{% extends 'base.html.twig' %}

{% block body %}
<header id="header" class="h-100 w-100 d-flex flex-column justify-content-center text-center mx-auto">
    <div class="jumbotron">
        <h1 class="display-4">Snowtricks!</h1>
        <p class="lead">Site communautaire des figures de Snowboard</p>
    </div>
    <div class="position-absolute end-0 bottom-0 py-5 px-5">
        <a href="#main">
            <i class="fas fa-arrow-down fa-3x"></i>
        </a>
    </div>
</header>

<div id="main">
    <main class="container-fluid py-3">
        <div id="postsContainer" class="d-flex flex-wrap justify-content-around" style="gap: 1em">
            {{ include('post/_list_posts.html.twig') }}
        </div>
        
        <div class="text-center my-3">
            <button id="loadMoreButton" data-paginator="{{ paginator }}" class="btn btn-primary">Voir plus</button>
        </div>
    
        <div class="position-relative text-end px-5">
            <a href="#header ">
                <i class="fas fa-arrow-up fa-3x"></i>
            </a>
        </div>
        
    </main>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('load_more_posts') }}
{% endblock %}
