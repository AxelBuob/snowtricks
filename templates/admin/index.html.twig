{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="container mt-3">
    <h1>{{ title }}</h1>
    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.name) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.description) }}
        </div>
        <button class="btn btn-primary" type="submit">Enregistrer</button>
    {{ form_end(form)}}
</div>
{% endblock %}
