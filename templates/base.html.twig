<!DOCTYPE html>
<html class="h-100" lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %} {{ title }} {% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="h-100">
        {% block nav %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path("app_home") }}">Snowtricks</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path("app_home") }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}#main">Figures</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Administration
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Tricks</a></li>
                            <li><a class="dropdown-item" href="#">Messages</a></li>
                            <li><a class="dropdown-item" href="#">Images</a></li>
                            <li><a class="dropdown-item" href="#">Utilisateurs</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Paramètres</a></li>
                        </ul>
                    </li>
                    {% endif %}
                </ul>
                {% if is_granted('ROLE_USER') %}
                    <a href="#" class="btn btn-primary me-2">
                    <span>Ajouter une figure</span>
                        <i class="fas fa-plus"></i>
                    </a>
                    <a href="{{ path("user_account") }}" class="btn btn-primary me-2" type="submit">Mon compte</a>
                    <a href="{{ path("app_logout") }}" class="btn btn-outline-primary" type="submit">Déconnexion</a>
                {% else %}
                    <a href="{{ path("app_login") }}" class="btn btn-outline-primary me-2" type="submit">Connexion</a>
                    <a href="{{ path("app_register") }}" class="btn btn-outline-primary" type="submit">Inscription</a>
                {% endif %}
                </div>
            </div>
        </nav>
        {% endblock %}


        {% block alert %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}
           
        {% block body %}{% endblock %}


        {% block footer %}
            <hr>
            <footer class="pb-5 pt-5">
                <div class="container">
                    <span>© Tous droits réservés | Snowtricks 2022</span>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
